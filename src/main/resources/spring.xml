<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="me.srcmaxim.MyBeanFactoryPostProcessor"/>
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" value="pointsconfig.properties"/>
    </bean>


    <bean id="world" class="me.srcmaxim.World">
        <property name="characters">
            <list merge="true">
                <bean id="warrior" class="me.srcmaxim.characters.Warrior">
                    <property name="name" value="Maxim"/>
                    <property name="weapon">
                        <bean class="me.srcmaxim.weapons.Sword" name="sword">
                            <constructor-arg name="damagePoints" value="10"/>
                        </bean>
                    </property>
                    <property name="helthPoints" value="${warrior.helthPoints}"/>
                    <property name="strenghtPoints" value="${warrior.strenghtPoints}"/>
                    <property name="armorPoints" value="${warrior.armorPoints}"/>
                </bean>

                <bean id="dragon" class="me.srcmaxim.characters.Dragon">
                    <property name="name" value="Avalon"/>
                    <property name="weapon">
                        <bean class="me.srcmaxim.weapons.FireBreath" name="fireBreath">
                            <constructor-arg name="damagePoints" value="40"/>
                        </bean>
                    </property>
                    <property name="helthPoints" value="${dragon.helthPoints}"/>
                    <property name="strenghtPoints" value="${dragon.strenghtPoints}"/>
                    <property name="armorPoints" value="${dragon.armorPoints}"/>
                </bean>
            </list>
        </property>
    </bean>

</beans>