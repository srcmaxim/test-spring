<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="warrior" class="me.srcmaxim.characters.Warrior" >
        <constructor-arg name="name" value="Maxim"/>
        <constructor-arg name="weapon" ref="sword"/>
        <constructor-arg name="helthPoints" value="100"/>
        <constructor-arg name="strenghtPoints" value="100"/>
        <constructor-arg name="armorPoints" value="100"/>
    </bean>
    <bean id="sword" class="me.srcmaxim.weapons.Sword">
        <constructor-arg name="damagePoints" value="10"/>
    </bean>

    <bean id="dragon" class="me.srcmaxim.characters.Dragon">
        <constructor-arg name="name" value="Avalon"/>
        <constructor-arg name="weapon" ref="fire"/>
        <constructor-arg name="helthPoints" value="60"/>
        <constructor-arg name="strenghtPoints" value="60"/>
        <constructor-arg name="armorPoints" value="60"/>
    </bean>
    <bean id="fire" class="me.srcmaxim.weapons.FireBreath">
        <constructor-arg name="damagePoints" value="40"/>
    </bean>

</beans>