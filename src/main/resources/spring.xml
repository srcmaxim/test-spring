<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <alias name="world" alias="world-alias"/>

    <bean id="world" name="world-name" class="me.srcmaxim.World" autowire="byName" scope="prototype"/>

    <bean id="warrior" class="me.srcmaxim.characters.Warrior" scope="prototype">
        <property name="name" value="Maxim"/>
        <property name="weapon">
            <bean class="me.srcmaxim.weapons.Sword">
                <constructor-arg name="damagePoints" value="10"/>
            </bean>
        </property>
        <property name="helthPoints" value="100"/>
        <property name="strenghtPoints" value="100"/>
        <property name="armorPoints" value="100"/>
    </bean>

    <bean id="dragon" class="me.srcmaxim.characters.Dragon" scope="prototype">
        <property name="name" value="Avalon"/>
        <property name="weapon">
            <bean class="me.srcmaxim.weapons.FireBreath">
                <constructor-arg name="damagePoints" value="40"/>
            </bean>
        </property>
        <property name="helthPoints" value="60"/>
        <property name="strenghtPoints" value="60"/>
        <property name="armorPoints" value="60"/>
    </bean>

</beans>